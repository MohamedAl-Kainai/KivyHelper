<ButtonsScreen@Screen>
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            title:'Buttons'
            left_action_items:[['arrow-left',lambda x:app.back_to_menu(root.manager)]]

        ScrollView:
            MDGridLayout:
                cols:1
                adaptive_height: True

                MDFloatLayout:
                    size_hint_y:None
                    height:dp(60)
                    MDIconButton:
                        text:'MDIconButton'
                        pos_hint:{'center_x':.5,'center_y':.5}
                        on_release:
                            Clipboard.copy(self.text)
                            toast('copy')
